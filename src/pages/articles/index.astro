---
import DefaultLayout from '@/layouts/DefaultLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '@/consts';
import { getCollection } from 'astro:content';
import { BlogPosts } from '@/components/sections/blog-posts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Serialize for client component
const serializedPosts = posts.map(post => ({
	id: post.id,
	data: {
		title: post.data.title,
		description: post.data.description,
		pubDate: post.data.pubDate.toISOString(),
		updatedDate: post.data.updatedDate?.toISOString(),
		image: post.data.image,
		authorImage: post.data.authorImage,
		authorName: post.data.authorName,
		tags: post.data.tags || [],
	}
}));
---

<DefaultLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<BlogPosts posts={serializedPosts} client:only='react' />
</DefaultLayout>

